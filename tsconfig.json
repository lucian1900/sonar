{
    "compilerOptions": {
        "baseUrl": "./",
        "module": "esnext",
        "moduleResolution": "node",
        "newLine": "LF",
        "target": "esnext",
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "src/*": ["src/*"],
            "assets/*": ["assets/*"],
        }
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        ".git",
        "node_modules"
    ]
}